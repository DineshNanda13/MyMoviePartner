<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:id="@+id/container_allposts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_picture_viewPost"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textView1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/profile_picture_viewPost"
            android:text="TextView name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="TextView title"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="TextView description"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView4_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3_description"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:text="TextView date"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3_description"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:text="TextView time"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4_date"
            android:layout_centerHorizontal="true"
            android:text="TextView location"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6_location"
            android:layout_centerHorizontal="true"
            android:text="TextView gender"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView8_postedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7_gender"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="TextView posted on"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/textView7_gender"
            android:background="@drawable/share"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/imageView_message"/>

        <ImageView
            android:id="@+id/imageView_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/textView7_gender"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_message_pink" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>